<!-- newsletter.liquid -->
<style>
  .customstyle{{ section.id }} .form-group .form-control{
    border-bottom-color:{{section.settings.colorborder}};
  }
  .customstyle{{ section.id }}.style2 .form-group .form-control{
    padding: .8rem 1.25rem;
    background-color: white;
    border:1px solid {{section.settings.colorborder}};
  }
  .customstyle{{ section.id }}.style2 .form-group .form-control:focus{
    border-color: var(--g-main);
  }
  .customstyle{{ section.id }} {
    background-position: center !important;
    background-repeat: no-repeat !important;
    background-size: cover !important;
  }
  @media (min-width: 992px){
    .customstyle{{ section.id }} {
      background-attachment: fixed !important;
    }
  }
</style>
<div class="customstyle{{ section.id }} lazyload position-relative {{section.settings.styleinput}}" 
  data-aos="{{section.settings.animation}}"
    data-sizes="auto"
    data-parent-fit="cover"
    data-bgset="{% include 'bgset', image: section.settings.image %}"
  >
  {%- include 'style-section' -%}
  
  <div class="{{ section.settings.setwidth }} text-center">
    <div class="row d-flex justify-content-center">
      <div class="{{section.settings.widthbox}}">
          {%- include 'section-heading' -%} 
            <div class="form-vertical px-md-5 pb-md-4">
              {%- form 'customer' -%}
                {{ form.errors | default_errors }}
                {%- if form.posted_successfully? -%}
                  <p class="form-success">{{ 'general.newsletter_form.confirmation' | t }}</p>
                {%- else -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <label for="NewsletterEmail-{{ block.id }}" class="label--hidden">{{ 'general.newsletter_form.newsletter_label' | t }}</label>
                  <div class=" form-group text-center input-group ">
                    <input class="form-control" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" name="contact[email]" id="NewsletterEmail-{{ block.id }}" autocorrect="off" autocapitalize="off">
                    <div class="input-group-append pl-3">
                      <button type="submit" class="btn btn-theme" name="commit">
                        <span class="d-none d-sm-block">{{ 'general.newsletter_form.submit' | t }}</span>
                        <span class="d-block d-sm-none"><i class="icon-send"></i></span>
                      </button>
                    </div>
                  </div>
                {%- endif -%}
              {%- endform -%}
            </div>
        </div>
      </div>
        
  </div>
</div>
