<!-- parallax-banner-effect -->
<div class="customstyle{{ section.id }} " data-aos={{section.settings.animation}}>
    {%- include 'style-section' -%}
  <style>
    .parallax-banner__wraper--{{section.id}} {padding: {{section.settings.padding_desktop}}px 0;background-size:cover;}@media (max-width:991px){.parallax-banner__wraper--{{section.id}} {padding: {{section.settings.padding_mobile}}px 0;}}
    .parallax-banner__wraper--{{section.id}} .parallax-banner__meta::before{
      background-color: {{section.settings.bg_box}};
      opacity: {{section.settings.opacity_bgbox}};
    }
    .parallax-banner__wraper--{{section.id}}::before{
      content:"";
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          z-index: 1;
          background-color: {{section.settings.bg_overlay}};
        opacity: {{section.settings.opacity_bg_overlay}};
    }
    .parallax-banner__wraper--{{section.id}} .parallax-banner__sub *{
      color:{{section.settings.subtitle_color}}
    }
    .parallax-banner__meta {
        pointer-events: inherit !important;
    }
    .parallax-effect{{ section.id }}.txt-right{
        padding-left: 63%;
        text-align: left !important;
    }
    @media (max-width:991px){
      .parallax-effect{{ section.id }}.txt-right{
        padding-left: 15%;
      }
    }
    .parallax-effect{{ section.id }}.txt-right .parallax-banner__meta {
        text-align: left !important;
    }
    .btn-hero{{ section.id }}{
        background-color: {{section.settings.bg_btn}};
        border-color: {{section.settings.bd_btn}};
        color: {{section.settings.txtcolor_btn}};
    }
    </style>
    <div class="{{ section.settings.setwidth }}">
        <div class="section-block"  >
            <div id="parallax-effect{{ section.id }}"  class="parallax-effect{{ section.id }} parallax-container lazyload parallax-banner__wraper txt-{{section.settings.align}} parallax-banner__wraper--{{section.id}} {% if section.settings.image != blank %}parallax-banner__wraper--has-background{% endif %}" 
                data-section-id="{{ section.id }}" 
                data-section-type="parallax-effect" 
                data-bg="{{ section.settings.image | img_url:"1920x" }}" 
                data-sizes="auto"
                data-parent-fit="cover"
                data-bgset="{% include 'bgset', image: section.settings.image %}" >
                {%- if section.settings.image == blank -%}
                    <div class="placeholder-background">
                        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {%- endif -%}
            <div class="parallax-banner__meta">
                {%- if section.settings.title != blank -%}
                <h2 class="h2 position-relative layer" style="color:{{section.settings.title_color}}" data-depth="0.2" >
                    {{section.settings.title}}
                </h2>
                {%- endif -%}
                {%- if section.settings.subtext != blank -%}
                    <div class="m-0 py-4 parallax-banner__sub position-relative layer" data-depth="0.3">
                    {{section.settings.subtext}}
                    </div>
                {%- endif -%}
        
                {%- if section.settings.button != blank and section.settings.link != blank -%}
                    <div class="parallax-banner__btn position-relative layer" data-depth="0.2">
                    <a href="{{ section.settings.link }}" class="btn btn-theme btn-hero{{ section.id }}" >
                        {{ section.settings.button | escape }}
                    </a>
                    </div>
                {%- endif -%}
            </div>
            </div>
        </div>
    </div>
  </div>
  
