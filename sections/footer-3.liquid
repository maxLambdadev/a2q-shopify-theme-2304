<style>
  :root{
    --g-footer-mid-bg:{{section.settings.footermidbg}};
    --g-footer-mid-link:{{section.settings.footermidlink}};
    --g-footer-bot-text:{{section.settings.footerbottext}};
    }
</style>
<style>
  .footer-mid {
	background: var(--g-footer-mid-bg);
	color: var(--g-footer-mid-link);
}

.footer-mid a {
	color: var(--g-footer-mid-link);
}

.footer-mid a:hover {
	color: var(--g-main);
}

.footer-mid__social .social-icons {
	background: var(--g-footer-mid-bg);
	z-index: 1
}

.footer-bot {
	background: var(--g-footer-mid-bg);
	padding-top: 20px;
	padding-bottom: 40px
}

.footer-bot__powered{
	color: var(--g-footer-bot-text)
}
.footer-bot__powered a {
	color: var(--g-main)
}


.footer-container {
	margin: 0 auto
}

.rtl .footer-container {
	text-align: right
}


.footer-mid__social li {
	width: 40px;
	height: 40px;
	line-height: 36px;
	border-radius: 5px;
  border:1px solid #e9e9e9;
	margin: 7px;
}


.footer-mid__contact-form .btn .icon {
	margin: 0 4px
}</style>

<!-- footer-3.liquid -->
<div class="footer-container text-center">
  <section class="footer-mid pt-5">
    {%- if section.settings.logo != blank -%}
    {%- assign logo = section.settings.logo -%}
    <div class="image-content__image-container mb-4 mx-auto" style="width: {{section.settings.widthlogofooter}}px;">
      <a class="image-content__image-wrapper" href="/" style="padding-top:{{ 1 | divided_by: logo.aspect_ratio | times: 100}}%;" >
        {%- assign img_url = logo | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        <img 
        class="lazyload transition" 
        data-srcset="{{ img_url }}"
        data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
        data-aspectratio="{{ logo.aspect_ratio }}"
        data-sizes="auto"
        src="{%- include 'srcBlank' -%}"  />
      </a>
      
    </div>
    {%- endif -%}
    {%- if section.settings.linklist_link != blank -%}
    <div class="footer-mid__linklist mb-2">
      <ul>
        {%- for link in linklists[section.settings.linklist_link].links -%}
        <li class="d-inline-block px-4 pb-3 font-weight-bold">
          <a href="{{link.url}}" title="{% include 'processMenuTitle' with itemName:link.title %}">{% include 'processMenuTitle' with itemName:link.title %}</a>
        </li>
        {%- endfor -%}
      </ul>
    </div>
    {%- endif -%}
    {%- if section.settings.social_enable -%}
    <div class="footer-mid__social position-relative">
      <ul class="list--inline social-icons d-inline-block px-2 position-relative ">
        {%- if settings.social_facebook_link != blank -%}
        <li>
          <a href="{{ settings.social_facebook_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}" style="color:#3b5999">
            {%- include 'icon-facebook' -%}</a>
        </li>
        {%- endif -%}
        {%- if settings.social_twitter_link != blank -%}
        <li>
          <a href="{{ settings.social_twitter_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}" style="color:#55acee">
            {%- include 'icon-twitter' -%}</a>
        </li>
        {%- endif -%}
        {%- if settings.social_pinterest_link != blank -%}
        <li>
          <a href="{{ settings.social_pinterest_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Pinterest' }}" style="color:#bd081c">
            {%- include 'icon-pinterest' -%}</a>
        </li>
        {%- endif -%}
        {%- if settings.social_tumblr_link != blank -%}
        <li>
          <a href="{{ settings.social_tumblr_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Tumblr' }}" style="color:#34465d">
            {%- include 'icon-tumblr' -%}</a>
        </li>
        {%- endif -%}
        {%- if settings.social_snapchat_link != blank -%}
        <li>
          <a href="{{ settings.social_snapchat_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Snapchat' }}" style="color:#FFFC00">
            {%- include 'icon-snapchat' -%}
          </a>
        </li>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
        <li>
          <a href="{{ settings.social_youtube_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'YouTube' }}" style="color:#cd201f">
            {%- include 'icon-youtube' -%}
            </a>
        </li>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
        <li>
          <a href="{{ settings.social_instagram_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}" style="color:#e4405f">
            {%- include 'icon-instagram' -%}</a>
        </li>
        {%- endif -%}
        {%- if settings.social_vimeo_link != blank -%}
        <li>
          <a href="{{ settings.social_vimeo_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Vimeo' }}" style="color:#1ab7ea">
            {%- include 'icon-vimeo' -%}
          </a>
        </li>
        {%- endif -%}
      </ul>
    </div>
    {%- endif -%}
  </section>
  <section class="footer-bot text-center">
    <div class="footer-bot__powered">
      <p> Copyright &copy; {{ "now" | date: "%Y" }} <b> {{ shop.name }} </b>.{%- if section.settings.powered_enable -%}<span> {{ powered_by_link }} </span>{%- endif -%}</p>
      
    </div>
  </section>
</div>
{% schema %}
{
  "name": "Footer 3",
  "settings": [
      {
        "type": "header",
        "content": "Mid footer"
      },
      {
        "type": "color",
        "id": "footermidbg",
        "label": "Background",
        "default": "#1e1e1e"
      },
      {
        "type": "color",
        "id": "footermidlink",
        "label": "Link color",
        "default": "#999"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "widthlogofooter",
        "min": 0,
        "max": 400,
        "step": 10,
        "unit": "px",
        "label": "Width Image",
        "default": 130
      },
      {
        "type": "link_list",
        "id": "linklist_link",
        "label": "Menu links"
      },
      {
        "type": "checkbox",
        "id": "social_enable",
        "label": "Enable social",
        "default": true
      },
      {
        "type": "header",
        "content": "Copyright"
      },
      {
        "type": "color",
        "id": "footerbottext",
        "label": "Text",
        "default": "#656565"
      },
      {
        "type": "checkbox",
        "id": "powered_enable",
        "label": "Enable Shopify powered",
        "default": true
      }
  ]
}
{% endschema %}