<footer class="site-footer" role="contentinfo">
  <div class="{{ section.settings.setwidth }}">
    <div class="row pb-5 mb-4">
      {%- for block in section.blocks -%}
      {%- case block.settings.width -%}
      {%- when '16%' -%}
      {%- assign block_width = 'col-lg-2 col-md-4' -%}
      {%- when '25%' -%}
      {%- assign block_width = 'col-lg-3 col-md-6' -%}
      {%- when '33%' -%}
      {%- assign block_width = 'col-lg-4 col-md-6' -%}
      {%- when '50%' -%}
      {%- assign block_width = 'col-lg-6' -%}
      {%- when '66%' -%}
      {%- assign block_width = 'col-lg-8 col-md-12' -%}
      {%- when '75%' -%}
      {%- assign block_width = 'col-lg-9 col-md-12' -%}
      {%- when '100%' -%}
      {%- assign block_width = 'col-12' -%}
      {%- endcase -%}
      <div class="{{block_width}} " {{ block.shopify_attributes }}>
        {%- case block.type -%}
        {%- when 'social' -%}
        <div class="site-footer__section">
          {%- if block.settings.title != blank -%}
          <h4 class="h6 site-footer__section-title text-{{ block.settings.align }}">{{ block.settings.title | escape }}</h4>
          {%- endif -%}
          <ul class="list-inline social-icons text-{{ block.settings.align }}">
            {%- include 'footer-socical' -%}
          </ul>
        </div>

        {%- when 'menu' -%}
        {%- if linklists[block.settings.link_list].links.size > 0 -%}
        <div class="site-footer__section">
          {%- if linklists[block.settings.link_list].title != blank -%}
            {%- if block.settings.title_menu -%}
            <h4 class="h6 site-footer__section-title">{{ linklists[block.settings.link_list].title }}</h4>
            {%- endif -%}
          {%- endif -%}
          <ul class="site-footer__list">
            {%- for link in linklists[block.settings.link_list].links -%}
            <li class="site-footer__list-item"><a href="{{ link.url }}">{{ link.title }}</a></li>
            {%- endfor -%}
          </ul>
        </div>
        {%- endif -%}

        {%- when 'text' -%}
        <div class="site-footer__section">
          {%- if block.settings.title != blank -%}
          <h4 class="h6 site-footer__section-title">{{ block.settings.title | escape }}</h4>
          {%- endif -%}
          {%- if block.settings.logofooter != blank -%}
          {%- assign logo = block.settings.logofooter -%}
          <div class="image-content__image-container logofooter" style="width: {{block.settings.widthlogofooter}}px;">
            <a class="image-content__image-wrapper" href="/" style="padding-top:{{ 1 | divided_by: logo.aspect_ratio | times: 100}}%;" >
              {%- assign img_url = logo | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              <img 
              class="lazyload transition" 
              data-srcset="{{ img_url }}"
              data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
              data-aspectratio="{{ logo.aspect_ratio }}"
              data-sizes="auto"
              src="{%- include 'srcBlank' -%}"  />
            </a>
            
          </div>
          {%- endif -%}
          <div class="rte-setting">{{ block.settings.text }}</div>
        </div>

        {%- when 'newsletter' -%}
        <div class="site-footer__section section-footer-email">
          {%- if block.settings.title != blank -%}
          <h4 class="h6 site-footer__section-title">
            {{ block.settings.title | escape }}
          </h4>
          {%- endif -%}
          <div class="form-vertical footer-email">
            {%- form 'customer' -%}
            {{ form.errors | default_errors }}
            {%- if form.posted_successfully? -%}
            <p class="form-success">{{ 'general.newsletter_form.confirmation' | t }}</p>
            {%- else -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            {%- if block.settings.subheading != blank -%}
            <label for="NewsletterEmail-{{ block.id }}" class="site-footer__newsletter-label">
              {{ block.settings.subheading }}
            </label>
            {%- endif -%}
            <div class="input-group">
              <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form.newsletter_placeholder' | t }}" name="contact[email]" id="NewsletterEmail-{{ block.id }}" class="form-control mr-3" autocorrect="off" autocapitalize="off">
              <div class="input-group-append">
                <button type="submit" class="btn btn-underline" name="commit">
                 {{ 'general.newsletter_form.submit' | t }}
                </button>
              </div>
            </div>
            {%- endif -%}
            {%- endform -%}
          </div>
          {% if block.settings.enablesocial %}
          <ul class="list-inline social-icons">
            {%- if settings.social_facebook_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_facebook_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}">
                {%- include 'icon-facebook' -%}
                <span >Fb</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_twitter_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_twitter_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}">
                {%- include 'icon-twitter' -%}
                <span >Tw</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_pinterest_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_pinterest_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Pinterest' }}">
                {%- include 'icon-pinterest' -%}
                <span>Pin</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_instagram_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_instagram_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}">
                {%- include 'icon-instagram' -%}
                <span >Ins</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_tumblr_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_tumblr_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Tumblr' }}">
                {%- include 'icon-tumblr' -%}
                <span >Tum</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_snapchat_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_snapchat_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Snapchat' }}">
                {%- include 'icon-snapchat' -%}
                <span >Snap</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_youtube_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'YouTube' }}">
                {%- include 'icon-youtube' -%}
                <span class="icon__fallback-text">You</span>
              </a>
            </li>
            {%- endif -%}
            {%- if settings.social_vimeo_link != blank -%}
            <li class="list-inline-item">
              <a href="{{ settings.social_vimeo_link | escape }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Vimeo' }}">
                {%- include 'icon-vimeo' -%}
                <span >Vim</span>
              </a>
            </li>
            {%- endif -%}
          </ul>
          {% endif %}
        </div>
        {%- endcase -%}
      </div>
      {%- endfor -%}
    </div>
  </div>
  <div class="site-footer__copyright" >
    <div class="{% if section.settings.fullwidth %}container-fluid{% else %}container{% endif %}">
      <div class="row align-items-lg-center">
        <div class="col-lg-6">
          <span>&copy; {{ 'now' | date: "%Y" }}, <b class="text-capitalize">{{ shop.name | link_to: '/' }}</b>. {{ powered_by_link }}</span>
        </div>
        <div class="col-lg-6 text-right">
          {%- if section.settings.paymentfooter != blank -%}
          {%- assign imgpayment = section.settings.paymentfooter -%}
            <div class="image-content__image-container ">
                <img class="lazyload" src="{%- include 'srcBlank' -%}" data-src="{{imgpayment | img_url : '400x'}}" />
                
              </div>
              
            </div>
          {%- endif -%}
        </div>
      
      </div>
    </div>
  </div>
</footer>
