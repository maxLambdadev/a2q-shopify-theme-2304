<!-- featured-products.liquid -->
<div class="customstyle{{ section.id }}" >
  {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      {%- include 'section-heading' -%}
      {%- assign collection = collections[section.settings.collection] -%}
      {%- assign rows = section.settings.rows -%}
      {%- if collection != blank -%}
      {%- assign product_limit = rows -%}
      <div class="row {% unless section.settings.padding %} m-0 {% endunless %}" data-aos={{section.settings.animation}}>
        {%- for product in collection.products limit: product_limit -%}
        <div class="{{section.settings.colgrid}} col-md-6 col-sm-6 col-xs-6 col-6 {% unless section.settings.padding %} p-0 {% endunless %}">
          {%- include 'product-card', product: product, collection: collection -%}
        </div>
        {%- endfor -%}
        {% if section.settings.txtbutton != blank %}
        <div class="text-center col-12">
          <a class="btn btn-line" href="{{section.settings.urlbtn}}">{{section.settings.txtbutton}}</a>
        </div>
        {% endif %}
      </div>
      {%- else -%}
      <div class="row">
        {%- assign product_limit = rows  -%}
        {%- for i in (1..product_limit) -%}
        {%- case i -%}
        {%- when 7 -%}
        {%- assign index = 1 -%}
        {%- when 8 -%}
        {%- assign index = 2 -%}
        {%- when 9 -%}
        {%- assign index = 3 -%}
        {%- else -%}
        {%- assign index = i -%}
        {%- endcase -%}
        <div class="{{section.settings.colgrid}} col-sm-6 col-xs-6 ">
          {%- include 'product-grid-blank' -%}
        </div>
        {%- endfor -%}
      </div>
      {%- endif -%}
    </div>
  </div>
</div>
